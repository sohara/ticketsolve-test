<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
  <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
    {{@label}}
  </label>
  <input class="block w-full  text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
    value={{@value}}
    oninput={{action (mut @value) value="target.value"}}
    id="grid-first-name" type="text" placeholder={{@placeholder}}>
</div>
