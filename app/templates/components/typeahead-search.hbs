{{#if (has-block)}}
  {{yield (hash
    input=(component "typeahead-search-input"
      query=this.query
      handleFocus=this.handleFocus
      handleSearch=this.handleSearch
      selectedResult=this.selectedResult
    )
    results=(component "typeahead-search-results"
      didSearch=this.didSearch
      handleSearch=this.handleSearch
      focussed=this.focussed
      selectResult=this.selectResult
      results=this.results
      selectedIndex=this.selectedIndex
      selectedResult=this.selectedResult
      newItemPrompt=this.newItemPrompt
      addNewItem=this.addNewItem
    )
    selection=(component "typeahead-search-selection"
      selectedResult=this.selectedResult
      deselectResult=this.deselectResult
    )
  )}}
{{else}}
  <TypeaheadSearchInput
    @query={{this.query}}
    @handleFocus={{this.handleFocus}}
    @handleSearch={{this.handleSearch}} />
  <TypeaheadSearchSelection
    @selectedResult={{this.selectedResult}}
    @deselectResult={{this.deselectResult}} />
  <TypeaheadSearchResults
    @didSearch={{this.didSearch}}
    @handleSearch={{this.handleSearch}}
    @focussed={{this.focussed}}
    @selectResult={{this.selectResult}}
    @results={{this.results}}
    @selectedIndex={{this.selectedIndex}}
    @addNewItem={{this.addNewItem}}
    @selectedResult={{this.selectedResult}}
    @newItemPrompt={{this.newItemPrompt}} as |result|>
    {{result}}
  </TypeaheadSearchResults>
{{/if}}
