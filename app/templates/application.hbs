<div class="container mx-auto py-4">
  <form class="w-full">
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-first-name">
          Invoice Number
        </label>
        <input class="appearance-none block w-full text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
          id="grid-first-name" type="text" placeholder="00100001">
      </div>
      <div class="w-full md:w-1/2 px-3">
        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="grid-last-name">
          Customer
        </label>
        <CustomerSearch
          @onClickSelected={{action "editCustomer"}}
          @onClickNew={{action "createCustomer"}}
          />
      </div>
    </div>
  </form>

  {{#if this.customer}}
    <form class="w-full border boder-grey-lighter rounded p-4">
      <h2 class="border-b mb-4 border-grey-lighter">Customer Details</h2>
      <div class="flex flex-wrap -mx-3 mb-6">
        <TextField @label="Name" @value={{this.customer.name}} @placeholder="Jane Doe" />
        <TextField @label="Email" @value={{this.customer.email}} @placeholder="jane@example.com" />
        <TextField @label="Phone" @value={{this.customer.phone}} @placeholder="232 343 3423" />
        <TextField @label="Mobile" @value={{this.customer.mobile}} @placeholder="232 343 3423" />
        <div class="w-full px-3 mb-6 text-right">
          <button
            onclick={{action cancelEdit}}
            class="bg-transparent text-blue-dark hover:bg-blue-dark hover:text-white font-bold py-2 px-4 rounded-full border border-blue">
            Cancel
          </button>
          <button
            onclick={{action cancelEdit}}
            class="bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 rounded-full">
            Submit
          </button>
        </div>

      </div>
    </form>
  {{/if}}
</div>
